@model Practice.Models.Phonebook
@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<form class="form-group" asp-action="PostRegister" method="post">
    <div class="form-row">
        <div class="form-group col-md-6"style="font-weight:bold; color:white;">
            <label for="fname">First Name</label><br>
            <input type="text" asp-for="@Model.FirstName" class="form-control"><br>
        </div>
        <div class="form-group col-md-6"style="font-weight: bold; color:white;">
            <label for="lname">Last Name</label><br>
            <input type="text" asp-for="@Model.LastName" class="form-control"><br>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6" style="font-weight: bold; color:white;">
            <label for="phone">Phone</label><br>
            <input type="text" asp-for="@Model.Phone"class="form-control"><br>
        </div>
        <div class="form-group col-md-6"style="font-weight: bold; color:white;">
            <label for="email">Email</label><br>
            <input type="text" asp-for="@Model.Email"class="form-control"><br>
        </div>
    </div>



    <div class="form-group"style="font-weight: bold; color:white;">
        <label for="address">Address</label><br>
        <input type="text" asp-for="@Model.Address"class="form-control"><br>
    </div>

    <a id="button">
        <input type="submit" value="Submit" class="btn btn-success">
    </a>
</form>






    





