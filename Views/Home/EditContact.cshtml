@model Practice.Models.Phonebook

@{ 
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form class="form-group" asp-action="EditContact">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label><br>
            <input asp-for="FirstName" class="form-control"><br>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName"></label><br>
            <input asp-for="LastName" class="form-control"><br>
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Phone"></label><br>
            <input asp-for="Phone" class="form-control"><br>
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email"></label><br>
            <input asp-for="Email" class="form-control"><br>
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label><br>
        <input asp-for="Address" class="form-control"><br>
    </div>

    <div class="form-group">
        <input type="submit" value="save" class="btn btn-primary">
    </div>
</form>


<div>
    <a asp-action="Contact">Back to the List</a>
</div>